//exercise 1//
public class Main {

    public static void main(String[] args) {

        System.out.println("Enter Two Number");
        int first = 10;
        int second = 12;

        System.out.println(first+ "  " + second);

        //add two numbers

        int sum = first + second;
        System.out.println("The sum is: " + sum);
    }
}

